- var selected = "/" + current.path[0] + "/";
- var menu = { 'Articles': 'https://medium.com/@khbrt'};

header.main-nav
  div.wrapper
    div.row
      div(class="fourth logo")
        a(href="/", style="height: 74px") kristofferhebert.com - Seattle Fullstack Javascript Developer
      a(href="#",class="menu-icon btn fr")
        img(src="//s3-us-west-2.amazonaws.com/kristofferhebert/hamburger.svg", class="fr", height="24", width="24")
      nav(class="three-fourths navdrawer-container")
        h4 Menu
        ul.menu
          each val, key in menu
            li
                if selected === val
                  a.selected(href=val, title=key)= key
                else if "Articles" === key
                    a(href=val, title=key, target="_blank")= key
                else
                  a(href=val, title=key)= key
